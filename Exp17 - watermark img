import cv2

# Load original image
image = cv2.imread("image1.jpg")

# Check if image loaded
if image is None:
    print("Image not loaded")
    exit()

# Create a copy for watermark
watermarked = image.copy()

# Watermark text
text = "CV LAB"

# Font settings
font = cv2.FONT_HERSHEY_SIMPLEX
font_scale = 1
color = (255, 255, 255)   # White color
thickness = 2

# Position (bottom-right corner)
text_size = cv2.getTextSize(text, font, font_scale, thickness)[0]
text_x = image.shape[1] - text_size[0] - 30
text_y = image.shape[0] - 20

# Put text on image
cv2.putText(watermarked, text, (text_x, text_y),
            font, font_scale, color, thickness)

# Blend original and watermark image
alpha = 0.5   # Transparency factor
output = cv2.addWeighted(watermarked, alpha, image, 1 - alpha, 0)

# Display images
cv2.imshow("Original Image", image)
cv2.imshow("Watermarked Image", output)

# Save result
cv2.imwrite("watermarked_output.jpg", output)

cv2.waitKey(0)
cv2.destroyAllWindows()
